<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/ly_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



   <ImageView
       android:id="@+id/im_imageplastic"
       android:layout_width="300dp"
       android:layout_height="300dp"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="40dp"
       android:layout_marginStart="20dp"
      android:src="@drawable/binbottle2"
       />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="PLASTIC COLLECTION!!"
    android:layout_below="@id/im_imageplastic"
   android:layout_marginTop="30dp"
    android:textSize="30dp"
    android:textStyle="bold"
    android:layout_marginStart="40dp"
    android:id="@+id/tv_plastic_collection_id"
    />


   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="#000000"
       android:id="@+id/bt_to_other_activity_id"
       android:layout_centerHorizontal="true"
       android:layout_below="@id/tv_plastic_collection_id"
       />












</RelativeLayout>